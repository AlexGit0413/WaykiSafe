<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8FB3566"
    tools:context=".Registro">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Actual ready"
                android:textColor="#666"
                android:layout_margin="16dp"
                android:textSize="14sp" />

            <FrameLayout
                android:id="@+id/panicContainer"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/locationText"
                android:layout_marginTop="20dp">

                <View
                    android:id="@+id/animCircle1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:background="@drawable/outer_circle" />

                <View
                    android:id="@+id/animCircle2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/middle_circle"
                    android:layout_gravity="center" />

                <View
                    android:id="@+id/rippleView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_circle"
                    android:visibility="visible"/>

                <ImageButton
                    android:id="@+id/panicButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/alarm"
                    android:contentDescription="BotÃ³n de pÃ¡nico" />
            </FrameLayout>

            <TextView
                android:id="@+id/helpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/panicContainer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Toque en caso de emergencia"
                android:textColor="#999"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/helpText"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnReporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš¨ Reportar Incidente"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#FF6347"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <!-- BOTÃ“N CENTRO MÃ‰DICO -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnCentroMedico"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="12dp"
                        android:backgroundTint="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="Centro mÃ©dico"
                                android:src="@drawable/hospi" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Centro mÃ©dico"
                                android:textColor="#000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- BOTÃ“N POLICÃA -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnPolicia"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="12dp"
                        android:backgroundTint="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="PolicÃ­a"
                                android:src="@drawable/poli" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="PolicÃ­a"
                                android:textColor="#000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- BOTÃ“N BOMBEROS -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnBomberos"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="12dp"
                        android:backgroundTint="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:contentDescription="Bomberos"
                                android:src="@drawable/bon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Bomberos"
                                android:textColor="#000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>


                <Button
                    android:id="@+id/btnWhatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“© Contacto de Emergencia"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#25D366"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnInfo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:backgroundTint="#87CEBA"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="Ir al mapa"
                    android:src="@drawable/flecha"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
